<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/favorite_recipe_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="@+id/favorite_recipe_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        tools:src="@mipmap/ic_launcher"/>

    <ProgressBar
        android:id="@+id/favorite_recipe_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/favorite_recipe_img"
        app:layout_constraintEnd_toEndOf="@+id/favorite_recipe_img"
        app:layout_constraintStart_toStartOf="@+id/favorite_recipe_img"
        app:layout_constraintTop_toTopOf="@+id/favorite_recipe_img" />

    <TextView
        android:id="@+id/error_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="error in loading recipe" />

    <TextView
        android:id="@+id/favorite_recipe_title"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        app:layout_constraintStart_toEndOf="@+id/favorite_recipe_img"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        tools:text="This is a sample title" />

    <com.facebook.share.widget.ShareButton
        android:id="@+id/share_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/favorite_recipe_img"
        app:layout_constraintLeft_toLeftOf="@id/favorite_recipe_title"/>

    <com.facebook.share.widget.SendButton
        android:id="@+id/send_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/favorite_recipe_img"
        app:layout_constraintStart_toEndOf="@+id/share_btn" />

</android.support.constraint.ConstraintLayout>